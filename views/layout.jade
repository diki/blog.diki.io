!!!
html
  head
    title= 'blog.diki.io'
    meta(charset='utf-8')
    link(rel='stylesheet', href='/css/bootstrap-spacelab.css')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.brand(href='/') blog.diki.io
    .wrap
      .container(style='margin-top:60px')
        .row
          .span8
            block content
          .span4
            .well.sidebar-nav
              ul.nav.nav-list
                li.nav-header categories
                - each cat in getCategories()
                  li
                    a(href=categoryURL(cat)) #{cat}
                li.nav-header tags
                - each tag in getTags()
                  li
                    a(href=tagURL(tag)) #{tag}
